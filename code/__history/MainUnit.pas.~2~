unit MainUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.jpeg;

type
  TfrMainForm = class(TForm)
    pnNav: TPanel;
    btnNavMap: TButton;
    btnNavBalance: TButton;
    btnNavOrders: TButton;
    bntNavDelivery: TButton;
    btnNavAnalytics: TButton;
    pnMapWrap: TPanel;
    imgMap: TImage;
    pnCreateObject: TPanel;
    btnCreateShop: TButton;
    btnCreateWarehouse: TButton;
    procedure imgMapClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frMainForm: TfrMainForm;

implementation

{$R *.dfm}

function GetRealX(const x: integer) : integer;
begin
  Result := x - frMainForm.left;
end;

function GetRealY(const y: integer) : integer;
begin
  Result := y - frMainForm.top;
end;

procedure TfrMainForm.imgMapClick(Sender: TObject);
var
  MyMouse: TMouse;
begin
  MyMouse := TMouse.Create;

  pnCreateObject.top := GetRealY(MyMouse.CursorPos.y);
  pnCreateObject.top := pnCreateObject.top - pnNav.height;
  pnCreateObject.top := pnCreateObject.top - pnCreateObject.height;

  pnCreateObject.left := GetRealX(MyMouse.CursorPos.x);
  pnCreateObject.Visible := true;
end;

end.
